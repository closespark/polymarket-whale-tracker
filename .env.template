# Polymarket API Keys
# Generate these from your Polymarket account or use client.derive_api_key()
POLYMARKET_API_KEY=your_api_key_here
POLYMARKET_SECRET=your_secret_here
POLYMARKET_PASSPHRASE=your_passphrase_here

# Wallet Private Key (export from Polymarket: reveal.magic.link/polymarket)
PRIVATE_KEY=0x_your_private_key_here

# Funder Address (your Polymarket deposit address - shown on polymarket.com/settings)
# This is the proxy wallet that holds your funds
FUNDER_ADDRESS=0x_your_funder_address_here

# Signature Type: 0=EOA (MetaMask), 1=POLY_PROXY (Magic/email login), 2=GNOSIS_SAFE
# Use 1 if you login with email/Google, 0 if you use MetaMask directly
SIGNATURE_TYPE=1

# Polygon RPC (Free public endpoint - can upgrade to Alchemy/Infura later)
POLYGON_RPC_URL=https://polygon-rpc.com

# Alternative RPCs (if primary fails)
POLYGON_RPC_BACKUP_1=https://rpc-mainnet.maticvigil.com
POLYGON_RPC_BACKUP_2=https://polygon-mainnet.public.blastapi.io

# Anthropic API Key (for AI analysis)
ANTHROPIC_API_KEY=your_anthropic_key_here

# Database (SQLite for now, can upgrade to PostgreSQL)
DATABASE_URL=sqlite:///whale_tracker.db

# Trading Configuration
AUTO_COPY_ENABLED=false
MAX_COPY_SIZE_USD=100
CONFIDENCE_THRESHOLD=80
MAX_WHALES_TO_TRACK=50

# Telegram Alerts (optional)
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Monitoring Settings
SCAN_INTERVAL_SECONDS=10
HISTORICAL_BLOCKS_TO_ANALYZE=100000
MIN_WHALE_PROFIT=5000
MIN_WHALE_WIN_RATE=0.60
MIN_WHALE_TRADES=50
